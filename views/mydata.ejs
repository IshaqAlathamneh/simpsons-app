<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>favourite</title>
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/data.css">
</head>
<body>
    <header>
        <%- include('./layout/header.ejs')%>
    </header>
    <main>

        <% myData.forEach( elem => {%>
            <div class="<%= elem.direction%>">
                
                <a href="/favorite-quotes/<%= elem.id%>"><img src="<%= elem.image%>" alt=""></a>
                <h3><%= elem.name%></h3>
                <p><%= elem.quote%></p>
                <form action="/favorite-quotes/<%= elem.id%>" method="GET">
                    <button type="submit"> View Details</button>
                </form>
            </div>
            <%})%>

    </main>
    <footer>

    </footer>
    
</body>
</html>